<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改关键字"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收支类型"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_type_selector"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_expense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="支出"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/text_type_selector"
            android:background="@drawable/selector_tab_bg"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收入"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/text_type_selector"
            android:background="@drawable/selector_tab_bg"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属应用"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/sp_app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dropdown"
        android:popupBackground="@drawable/bg_input_field"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别关键词"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_keyword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="?android:attr/textColorSecondary"
            android:backgroundTint="@color/input_bg"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="@color/real_white"
            android:backgroundTint="@color/app_yellow"
            android:layout_marginStart="8dp"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
    </LinearLayout>

</LinearLayout>