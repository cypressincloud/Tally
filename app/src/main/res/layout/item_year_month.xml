<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingVertical="6dp"
    android:layout_marginBottom="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1月"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:layout_gravity="start"
        android:layout_marginStart="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="一" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="二" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="三" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="四" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="五" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="六" android:textSize="9sp" android:textColor="#999"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center" android:text="日" android:textSize="9sp" android:textColor="#999"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"/>

</LinearLayout>