<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="记录加班"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/et_hourly_rate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_field"
            android:hint="时薪 (元/小时)"
            android:inputType="numberDecimal"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_duration"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input_field"
            android:hint="时长 (小时)"
            android:inputType="numberDecimal"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_calculated_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="预计收入: 0.00"
            android:gravity="end"
            android:textColor="@color/expense_green"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_cancel_overtime"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/input_bg"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/btn_save_overtime"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="确  认"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:backgroundTint="@color/app_yellow"
                app:cornerRadius="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>