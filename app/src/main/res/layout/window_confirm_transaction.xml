<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/window_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/window_card_content"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/app_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记一笔"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_window_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:overScrollMode="never" />

                <RadioGroup
                    android:id="@+id/rg_window_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rb_window_expense"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="支出"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/bg_type_selector"
                        android:textColor="@color/text_type_selector"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_window_income"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="收入"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/bg_type_selector"
                        android:textColor="@color/text_type_selector"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </RadioGroup>

                <Spinner
                    android:id="@+id/sp_asset"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_field"
                    android:popupBackground="@drawable/bg_input_field"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_window_amount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="金额"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_window_category"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="自定义分类*"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:textSize="16sp"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_window_remark"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="添加备注*"
                    android:textSize="16sp"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_window_note"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="记录时间 (可选)"
                    android:textSize="16sp"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_window_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:text="取消"
                        android:textColor="@color/text_primary"
                        android:backgroundTint="@color/input_bg"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="16dp"
                        app:elevation="0dp"
                        app:pressedTranslationZ="0dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_window_save"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:text="确认保存"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/app_yellow"
                        app:cornerRadius="16dp"
                        app:elevation="0dp"
                        app:pressedTranslationZ="0dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>