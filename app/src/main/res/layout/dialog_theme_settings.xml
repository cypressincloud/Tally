<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主题设置"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/rg_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_follow_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跟随系统"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rb_day_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日间模式"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rb_night_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="12dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_cancel_theme"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="取消"
        android:textColor="?android:attr/textColorSecondary"
        android:backgroundTint="@color/input_bg"
        app:cornerRadius="16dp"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

</LinearLayout>