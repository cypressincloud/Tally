<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增续费提醒"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="续费周期"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rg_period"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_type_selector"
        android:padding="2dp">
        <RadioButton
            android:id="@+id/rb_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="每月"
            android:gravity="center"
            android:checked="true"
            android:textColor="@color/text_type_selector"
            android:background="@drawable/selector_tab_bg"/>
        <RadioButton
            android:id="@+id/rb_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="每年"
            android:gravity="center"
            android:textColor="@color/text_type_selector"
            android:background="@drawable/selector_tab_bg"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扣费日期"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_date_select"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input_field"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:text="点击选择日期"
        android:textSize="16sp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="续费对象"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_renewal_object"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input_field"
        android:hint="例如：视频会员、云服务"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_renewal_amount"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input_field"
        android:hint="0.00"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="numberDecimal"
        android:textColor="@color/text_primary"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btn_save_config"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="保存设置"
        android:backgroundTint="@color/app_yellow"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"/>
</LinearLayout>