<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_background">

    <RelativeLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bar_background">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/black"
            android:layout_toStartOf="@id/tv_month_title"
            android:contentDescription="上一月"/>

        <TextView
            android:id="@+id/tv_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2025年12月"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"/>

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/black"
            android:layout_toEndOf="@id/tv_month_title"
            android:contentDescription="下一月"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_month_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top_bar"
        android:background="@color/bar_background"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:text="12月"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_week_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_month_label"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="8dp"
        android:background="@color/bar_background">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/layout_stat_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_stat_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_month_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/income_red"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_stat_expense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_stat_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_month_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/expense_green"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_stat_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_stat_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结余"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_month_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/app_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_stat_overtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_stat_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加班"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_month_overtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="#FF9800"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_week_header"
        android:layout_above="@id/card_stats"
        android:padding="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_quick_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/card_stats"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_qs_record"
        android:contentDescription="记一笔"
        app:backgroundTint="@color/app_yellow"
        app:tint="@color/real_white"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        android:stateListAnimator="@null"/>

</RelativeLayout>