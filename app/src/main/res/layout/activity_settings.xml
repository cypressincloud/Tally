<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bar_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="ifContentScrolls">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_category_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="分类预设设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_backup_restore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="数据备份与恢复"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_auto_asset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="自动资产设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_toggle_night_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="主题设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_assistant_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="记账助手设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_default_record_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="设置记账界面默认显示"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_overtime_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="设置加班薪资标准"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:id="@+id/divider_currency"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_currency_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="货币单位设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:id="@+id/divider_donate"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_photo_backup_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="照片备份设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_auto_renewal_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="自动续费设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_quick_record_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="快捷按钮设置"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_security_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="密码与生物识别"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_user_notice_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="用户须知"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F888888"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:id="@+id/btn_donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="捐赠支持"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="?android:attr/textColorPrimary"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="极简模式"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启后隐藏菜单按钮，长按'统计'进入设置"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_minimalist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb_custom"
                app:track="@drawable/switch_track_custom"
                app:showText="false"
                app:thumbTint="@null"
                app:trackTint="@null"
                android:background="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>