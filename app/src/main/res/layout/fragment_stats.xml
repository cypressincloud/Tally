<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bar_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bar_background"
        android:gravity="center"
        android:text="统计"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <ScrollView
        android:id="@+id/scroll_view_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <RadioGroup
                android:id="@+id/rg_time_scope"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_selector_stats"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="年"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"/>

                <RadioButton
                    android:id="@+id/rb_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="月"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"/>

                <RadioButton
                    android:id="@+id/rb_week"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="周"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"
                    android:checked="true"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@null"
                    app:tint="@color/text_primary"
                    android:contentDescription="前一页"/>

                <TextView
                    android:id="@+id/tv_current_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2024年5月 第3周"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="4dp"/>

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@null"
                    app:tint="@color/text_primary"
                    android:contentDescription="后一页"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_trend_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收支趋势"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingStart="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_line"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="24dp"
                    android:layout_marginHorizontal="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_expense_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支出构成"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingStart="20dp"
                    android:paddingBottom="12dp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_pie"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="16dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_income_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收入构成"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                android:visibility="gone"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_pie_income"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_summary_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="24dp"
                    android:layout_marginHorizontal="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="总结"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingStart="20dp"
                    android:paddingBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/assets_field"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_summary_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="本周消费"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_summary_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"/>

                    <View
                        android:id="@+id/divider_overtime"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_overtime_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="本周加班"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_overtime_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>